<assembly>

    <id>all</id>

    <formats>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>

        <!-- Dependencies artifacts -->
        <dependencySet>
            <includes>
                <include>*:jar:*</include>
            </includes>
            <outputDirectory>lib/</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>false</unpack>
        </dependencySet>

        <!-- Dependencies resources -->
        <dependencySet>
            <includes>
                <include>*:zip:bundle</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>true</unpack>
        </dependencySet>

        <!-- Dependencies dist - Play! -->
        <dependencySet>
            <includes>
                <include>org.icij.datashare:datashare-web-play:zip:dist</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <unpack>true</unpack>
        </dependencySet>

    </dependencySets>

</assembly>