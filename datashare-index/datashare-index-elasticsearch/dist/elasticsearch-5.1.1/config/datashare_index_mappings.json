// DataShare Indices Mappings Template
//
// curl -XPUT    'localhost:9200/_template/datashare_mappings' -d '(...)'
// curl -XGET    'localhost:9200/_template/datashare_mappings?pretty'
// curl -XDELETE 'localhost:9200/_template/datashare_mappings?pretty'

{
  "template": "datashare*",

  "mappings": {

    "Document": {
      "properties": {
        "content": {
          "type": "text",
          "index_options": "offsets"
        },
        "asOf": {
          "type": "date",
          "format": "date_time"
        },
        "path": {
          "type": "text"
        },
        "length": {
          "type": "integer"
        },
        "encoding": {
          "type": "keyword"
        },
        "type": {
          "type": "keyword"
        },
        "language": {
          "type": "keyword"
        },
        "parser": {
          "type": "keyword"
        }
      }
    },

    "NamedEntity": {
      "_parent": {
        "type": "Document"
      },
      "properties": {
        "mention": {
          "type": "text",
          "index_options": "docs"
        },
        "hash": {
          "type": "keyword"
        },
        "category": {
          "type": "keyword"
        },
        "document": {
          "type": "keyword"
        },
        "offset": {
          "type": "integer"
        },
        "extractor": {
          "type": "keyword"
        },
        "extractorLanguage": {
          "type": "keyword"
        },
        "partsOfSpeech": {
          "type": "text",
          "index_options": "docs"
        }
      }
    }
  }
}
