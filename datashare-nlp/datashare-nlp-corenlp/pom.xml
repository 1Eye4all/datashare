<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>datashare-nlp</artifactId>
        <groupId>org.icij.datashare</groupId>
        <version>0.5</version>
    </parent>

    <artifactId>datashare-nlp-corenlp</artifactId>
    <packaging>jar</packaging>


    <dependencies>

        <!-- Datashare Api -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>datashare-api</artifactId>
        </dependency>

        <!-- Stanford CoreNLP -->
        <dependency>
            <groupId>edu.stanford.nlp</groupId>
            <artifactId>stanford-corenlp</artifactId>
            <version>${corenlp.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-log4j12</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- Log4j / Slf4j -->
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
        </dependency>

    </dependencies>


    <build>
        <plugins>

            <!-- Assembly -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
            </plugin>

            <!-- Shade -->
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <excludes>
                                    <exclude>edu.stanford.nlp:stanford-corenlp:jar:models:3.6.0</exclude>
                                    <exclude>edu.stanford.nlp:stanford-corenlp:jar:models-spanish:3.6.0</exclude>
                                    <exclude>edu.stanford.nlp:stanford-corenlp:jar:models-french:3.6.0</exclude>
                                    <exclude>edu.stanford.nlp:stanford-corenlp:jar:models-german:3.6.0</exclude>
                                </excludes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <!--<relocations>-->
                        <!--<relocation>-->
                            <!--<pattern>org.apache</pattern>-->
                            <!--<shadedPattern>for.corenlp.org.apache</shadedPattern>-->
                        <!--</relocation>-->
                        <!--<relocation>-->
                            <!--<pattern>org.w3c</pattern>-->
                            <!--<shadedPattern>for.corenlp.org.w3c</shadedPattern>-->
                        <!--</relocation>-->
                        <!--<relocation>-->
                            <!--<pattern>javax</pattern>-->
                            <!--<shadedPattern>for.corenlp.javax</shadedPattern>-->
                        <!--</relocation>-->
                        <!--<relocation>-->
                            <!--<pattern>org.xml</pattern>-->
                            <!--<shadedPattern>for.corenlp.org.xml</shadedPattern>-->
                        <!--</relocation>-->
                        <!--<relocation>-->
                            <!--<pattern>org.joda</pattern>-->
                            <!--<shadedPattern>for.corenlp.org.joda</shadedPattern>-->
                        <!--</relocation>-->
                        <!--<relocation>-->
                            <!--<pattern>org.slf4j</pattern>-->
                            <!--<shadedPattern>for.corenlp.org.slf4j</shadedPattern>-->
                        <!--</relocation>-->
                    <!--</relocations>-->
                </configuration>
            </plugin>
        </plugins>

    </build>

</project>